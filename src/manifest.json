{
  "name": "Pure New Tab",
  "{{chrome}}.short description": "A clean and minimalistic new tab page",
  "description": "A simple new tab page extension. Aimming to provide a clean and minimalistic ntp for users.",
  "manifest_version": 3,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"]
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab/newtab.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{0bdf54d0-7c91-4477-873a-80412ddc5fa4}",
      "strict_min_version": "58.0"
    }
  }
}
